// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Fixture {
    id            Int             @id @default(autoincrement())
    model         String          @unique
    fixtureType   FixtureType     @relation(fields: [fixtureTypeId], references: [id])
    manufacture   Manufacture     @relation(fields: [manufactureId], references: [id])
    weight        Float
    power         Float?
    tags          Tag[]
    fixtureTypeId Int
    manufactureId Int
    details       FixtureDetails?
}

model FixtureType {
    id      Int       @id @default(autoincrement())
    name    String    @unique
    Fixture Fixture[]
}

model Manufacture {
    id      Int       @id @default(autoincrement())
    name    String    @unique
    Fixture Fixture[]
}

model FixtureDetails {
    id           Int         @id @default(autoincrement())
    powerPassage Boolean
    connectors   Connector[]
    dmxModes     DmxMode[]
    powerPlug    PowerPlug?  @relation(fields: [powerPlugId], references: [id])
    powerPlugId  Int?
    outdoor      Boolean     @default(false)
    links        Link[]
    desc         String      //@db.VarChar(320)
    width        Int?
    height       Int?
    thickness    Int?
    resolutionH  Int?
    resolutionV  Int?
    pixel        Float?
    fixture      Fixture     @relation(fields: [fixtureId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    fixtureId    Int         @unique
}

model Connector {
    id             Int              @id @default(autoincrement())
    name           String           @unique
    fixtureDetails FixtureDetails[]
}

model DmxMode {
    id               Int            @id @default(autoincrement())
    name             String
    channels         Int
    fixtureDetails   FixtureDetails @relation(fields: [fixtureDetailsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    fixtureDetailsId Int
    @@unique([name, fixtureDetailsId])
}

model PowerPlug {
    id             Int              @id @default(autoincrement())
    name           String           @unique
    fixtureDetails FixtureDetails[]
}

model Link {
    id               Int            @id @default(autoincrement())
    name             String
    url              String         @unique
    fixtureDetails   FixtureDetails @relation(fields: [fixtureDetailsId], references: [id], onDelete: Cascade, onUpdate: Cascade)
    fixtureDetailsId Int            @unique
}

model Tag {
    id       Int       @id @default(autoincrement())
    name     String    @unique
    fixtures Fixture[]
}

model User {
    id    Int    @id @default(autoincrement())
    email String @unique
}
